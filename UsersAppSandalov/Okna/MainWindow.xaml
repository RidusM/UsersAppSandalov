<Window x:Class="UsersAppSandalov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersAppSandalov"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="BreweryApp" Height="600" Width="1000">
    <Grid Background="#E6FC3F">
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding = "30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="BreweryApp" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Margin ="0 0 0 20" />
                <TextBox x:Name="textBoxLogin" materialDesign:HintAssist.Hint="Введите лоигн" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <PasswordBox x:Name ="passBox" materialDesign:HintAssist.Hint="Введите пароль" Style="{StaticResource MaterialDesignFilledPasswordBox}" />
                <Button Content="Авторизоваться" Margin="0 20" Click="Button_Auth_Click" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
